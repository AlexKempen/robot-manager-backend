{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pull assembly scripts",
            "type": "shell",
            "command": "cd python -m tools.pull_scripts",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Launch server",
            "type": "shell",
            "command": "python -m backend.server",
            "problemMatcher": []
        },
        {
            "label": "Update submodules",
            "type": "shell",
            "command": "git submodule update --init --remote && bash ./setup.sh",
            "problemMatcher": []
        }
    ]
}